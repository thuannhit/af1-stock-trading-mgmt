{
    "language": "ts",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "plugins": [
            "@nestjs/swagger/plugin",
            {
                "name": "@nestjs/graphql",
                "options": {
                  "introspectComments": true
                }
            }
        ],
        "assets": [
            {
                "include": "i18n/*.json",
                "outDir": "dist/src"
            }
        ]
    }
}
